{{!--
Re-usable card for linking to posts
--}}

<article class="gh-card {{post_class}} gh-panel">
    <a class="gh-card-link" href="{{url}}">
        <div class="gh-card-content">
            <div class="gh-card-title-bar">
                <h2 class="gh-card-title">{{title}}</h2>
                <span class="gh-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="YYYY-MM-D"}}</time>
            </div>
            <div class="gh-card-body">
                <p>{{excerpt}}</p>
                <span class="gh-card-body-read-more">...Read more</span>
            </div>
        </div>
        {{#if feature_image}}
            <img class="gh-card-image"
                srcset="{{img_url feature_image size="s"}} 75w,
                        {{img_url feature_image size="m"}} 150w,
                        {{img_url feature_image size="l"}} 250w,
                        {{img_url feature_image size="xl"}} 500w"
                sizes="(max-width: 500px) 200px, 350px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            />
        {{/if}}
    </a>
</article>